#! /bin/bash

if [ -f $HOME/.bash_functions ]; then
    source $HOME/.bash_functions
    check_command parallel git
fi

function git_fetch() {
    local repo="${1%.git}"
    pushd "$repo"
    git fetch
    popd 2>&1 >/dev/null
}

export -f git_fetch

find . -type d -name '.git' -print0 |
    parallel -0 git_fetch "{}"
